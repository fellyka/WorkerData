@model List<WorkerData.Models.WorkerViewModel>

@{
    ViewData["Title"] = "Worker Details";
}
<h3>@ViewData["Title"]</h3>
<hr/>
<form>
    <button asp-action="Create" asp-asp-controller="Worker" class="btn btn-primary">Create a New Worker</button>
   <table class="table table-responsive table-hover">
      <thead>
         <tr class="table-active">
            <th>Id</th>
            <th>Name</th>
            <th>Date Of Birth</th>
            <th>E-Mail</th>
            <th>Salary</th>
            <th>Action</th>
         </tr>
      </thead>
      <tbody>
        @if(Model != null && Model.Any())
        {
            @foreach(var w in Model)
            {
             <tr>
                <td>@w.Id</td>
                <td>@w.FullName</td>
                <td>@w.Email</td>
                <td>@w.DateOfBirth</td> 
                <td>@w.Salary</td>
                <td>
                    <div class="btn-group btn-group-sm">
                      <a asp-controller="Worker" asp-action="Edit" asp-route-id="@w.Id" class="btn btn-primary">Edit</a>
                      <a asp-controller="Worker" asp-action="Delete" asp-route-id="@w.Id" class="btn btn-danger">Delete</a>
                    </div>
                </td>
             </tr>   
            }
        }
        else
        {
           <tr>
            <td colspan="6">
              <div>
                No Worker Available !
              </div>
            </td>
           </tr>
        }
      </tbody>
   </table>
</form>